{% extends 'base.html.twig' %}

{% block title %}EDIT
{% endblock %}

{% block body %}

	<h1>Edit</h1>

	<form>
		<div class="form-group">
			<label for="name">Name</label>
			<input id="name" value="{{datas.name}}"/>
		</div>
		<div class="form-group">

			<label for="description">Description</label>
			<input id="description" value="{{datas.description}}"/>
		</div>

		<div class="form-group">

			<h3>Users</h3>
		</div>
		<div class="form-group">

			{% for user in datas['users'] %}

				<div class="form-group">

					<label for="name{{loop.index0}}">Name</label>
					<input id="name{{loop.index0}}" value="{{user.name}}"/>
				</div>

				<div class="form-group">

					<label for="role{{loop.index0}}">Role</label>
					<input id="role{{loop.index0}}" value="{% for role in user.role %} {{role}} {% endfor %}"/>
				</div>

				<div class="form-group">

					<label for="password{{loop.index0}}">Password</label>
					<input id="password{{loop.index0}}" value="{{user.password}}"/>
				</div>

				<br/>
				<br/>

			{% endfor %}
		</div>

		<button type="submit">Submit</button>

	</form>

{% endblock %}
